<%= render partial: 'shared/title', locals: { title: 'Sign in' } %>
<div class="row form_background">
	<div class="span6 offset2">
		<%= form_for(:session, url: sessions_path, html: { class: "form-horizontal"}) do |f| %>
		<div class="field control-group">
			<%= f.label :email, "Email:", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :email, class: "input-large" %>
			</div>
		</div>
		<div class="field control-group">
			<%= f.label :password, "Password:", class: "control-label" %>
			<div class="controls">
				<%= f.password_field :password, class: "input-large" %>
			</div>
		</div>
		<div class="field control-group">
			<%= f.label :password, "Remember me:", class: "control-label" %>
			<div class="controls">
				<%= f.check_box :remember_me, class: "input-large" %>
			</div>
		</div>
		<br />
		<div class="form-actions center">
			<%= f.submit "Sign in", class: "btn btn-primary" %>
		</div>
		<% end %>
	</div>
</div>
