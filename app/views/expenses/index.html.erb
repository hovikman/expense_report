<h1>Listing Expenses</h1>

<table id="expenses" class="display">
	<thead>
		<tr>
			<th>Id</th>
			<th>User</th>
			<th>Submit date</th>
			<th>Purpose</th>
			<th>Status</th>
			<th>Total Amount</th>
		</tr>
	</thead>

	<tbody>
		<% @expenses.each do |expense| %>
		<tr>
			<td><%= expense.id %></td>
			<td><%= expense.user.name %></td>
			<td><%= expense.submit_date %></td>
			<td><%= expense.purpose %></td>
			<td><%= expense.expense_status.name %></td>
			<td><%= expense.total_amount() %></td>
		</tr>
		<% end %>
</table>

