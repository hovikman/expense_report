<%= render partial: 'shared/title', locals: { title: title } %>

<table id="expenses" class="display">
	<thead>
		<tr>
			<th>Id</th>
			<th>User</th>
			<th>Submit date</th>
			<th>Purpose</th>
			<th>Status</th>
			<th>Total Amount</th>
		</tr>
	</thead>

	<tbody>
		<% @expenses.each do |expense| %>
		<tr>
			<td><%= expense.id %></td>
			<td><%= expense.user.name %></td>
			<td><%= expense.submit_date %></td>
			<td><%= expense.purpose %></td>
			<td><%= expense.expense_status.name %></td>
			<td><%= number_to_currency(expense.total_amount(), precision: 2, delimiter: "", format: "%n") %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br />
