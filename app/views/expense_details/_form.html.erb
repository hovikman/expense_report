<%= form_for(@expense_detail) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :expense_id %><br />
    <%= f.collection_select(:expense_id, Expense.all, :id, :purpose) %>
  </div>
  <div class="field">
    <%= f.label :expense_type_id %><br />
    <%= f.collection_select(:expense_type_id, ExpenseType.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :currency_id %><br />
    <%= f.collection_select(:currency_id, Currency.all, :id, :code) %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :exchange_rate %><br />
    <%= f.text_field :exchange_rate %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
