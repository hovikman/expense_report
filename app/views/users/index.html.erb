<h1>Listing users</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Name</th>
    <th>Manager</th>
    <th>Email</th>
    <th>User type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.company.name %></td>
    <td><%= user.name %></td>
    <td><%= user.manager_name %></td>
    <td><%= user.email %></td>
    <td><%= user.user_type.name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

