<h1>Listing Currencies</h1>

<table id="currencies" class="display">
	<thead>
		<tr>
			<th>ID</th>
			<th>Code</th>
			<th>Name</th>
		</tr>
	</thead>

	<tbody>
		<% @currencies.each do |currency| %>
		<tr>
			<td><%= currency.id %></td>
			<td><%= currency.code %></td>
			<td><%= currency.name %></td>
		</tr>
		<% end %>
	</tbody>
</table>

